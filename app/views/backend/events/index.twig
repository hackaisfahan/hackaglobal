{% set pageTitle = 'Events index' %}
{% extends "layouts/default.twig" %}

{% block content %}
    {% include 'elements/navbar.twig' %}

    <div id="wrapper" class="container">

        <div class="row">
            <div class="col-lg-12">

                {% include 'elements/alert.twig' %}

                <div class="panel panel-default">
                    <div class="panel-heading">
                        {% trans pageTitle %}
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" id="dataTables">
                                <thead>
                                    <tr>
                                        <th class="col-xs-8">{% trans "Name" %}</th>
                                        <th class="col-xs-2">{% trans "Start Date" %}</th>
                                        <th class="col-xs-2">{% trans "End Date" %}</th>
                                        <th>{% trans "Actions" %}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                        <tr>
                                            <td>{{ event.name }}</td>
                                            <td>{{ event.start_date }}</td>
                                            <td>{{ event.end_date }}</td>
                                            <td>
                                                <a href="{{ urlFor('admin/events/update', { "id" : event.id }) }}" class="btn btn-default btn-sm">{% trans "Edit" %}</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
